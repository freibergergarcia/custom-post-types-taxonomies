{
  "name": "freibergergarcia/wordpress-related",
  "description": "WordPress Related functionalities",
  "license": "Apache-2.0",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Bruno",
      "email": "freibergergarcia@gmail.com"
    }
  ],
  "support": {
    "src": "https://github.com/freibergergarcia/wordpress-related",
    "issues": "https://github.com/freibergergarcia/wordpress-related/issues"
  },
  "require": {
    "php": ">=8.0",
    "psr/log": "~1.0",
    "automattic/vipwpcs": "^3.0",
    "php-di/php-di": "^7.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "10up/wp_mock": "^0.4.2",
    "phpcompatibility/phpcompatibility-wp": "*"
  },
  "autoload": {
    "psr-4": {
      "WordPress_Related\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WordPress_Related\\Tests\\Unit\\": "tests/unit/"
    }
  },
  "scripts": {
    "phpcs": "./vendor/bin/phpcs",
    "phpcbf": "./vendor/bin/phpcbf",
    "unit": "./vendor/bin/phpunit --no-coverage tests/unit",
    "coverage": "./vendor/bin/phpunit --coverage-html=coverage/html tests/unit"
  }
}
